<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity$ContactFragment"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_button_height"
        android:layout_marginLeft="@dimen/contact_button_margin"
        android:layout_marginRight="@dimen/contact_button_margin"
        android:layout_marginTop="@dimen/contact_button_margin"
        android:layout_marginBottom="@dimen/contact_button_margin"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/layout_ling">

            <ImageView
                android:layout_width="@dimen/contact_image_dimen"
                android:layout_height="@dimen/contact_image_dimen"
                android:id="@+id/imageView_contact_ling"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginStart="@dimen/contact_description_margin"
                android:textSize="12sp"
                android:text="@string/contact_ling"
                android:id="@+id/textView_contact_ling"
                android:gravity="center"
                android:textColor="@color/story_text"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton_contact_ling"
            android:background="#00FFFFFF"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_button_height"
        android:layout_marginLeft="@dimen/contact_button_margin"
        android:layout_marginRight="@dimen/contact_button_margin"
        android:layout_marginTop="@dimen/contact_button_margin"
        android:layout_marginBottom="@dimen/contact_button_margin"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/layout_xi">

            <ImageView
                android:layout_width="@dimen/contact_image_dimen"
                android:layout_height="@dimen/contact_image_dimen"
                android:id="@+id/imageView_contact_xi"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginStart="@dimen/contact_description_margin"
                android:textSize="12sp"
                android:text="@string/contact_xi"
                android:id="@+id/textView_contact_xi"
                android:gravity="center"
                android:textColor="@color/story_text"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageButton_contact_xi"
            android:background="#00FFFFFF"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/contact_button_margin"
        android:layout_marginBottom="@dimen/social_media_icon_margin"
        android:layout_marginEnd="@dimen/social_media_icon_margin">
        <ImageButton
            android:layout_width="@dimen/social_media_icon_weight"
            android:layout_height="@dimen/social_media_icon_weight"
            android:id="@+id/imageButton_contact_facebook"/>

        <ImageButton
            android:layout_width="@dimen/social_media_icon_weight"
            android:layout_height="@dimen/social_media_icon_weight"
            android:id="@+id/imageButton_contact_twitter"
            android:layout_marginStart="@dimen/social_media_icon_margin" />

    </LinearLayout>

</LinearLayout>

</ScrollView>